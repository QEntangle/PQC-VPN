# PQC-VPN Demo Environment Configuration
# Copy this file to .env and adjust settings for your environment

# Hub Configuration
HUB_IP=192.168.0.103
ENABLE_HA=false
ENABLE_MONITORING=true
ENABLE_WEB_INTERFACE=true

# Network Configuration
VPN_SUBNET=10.10.0.0/16
DNS_SERVERS=8.8.8.8,1.1.1.1

# Security Configuration
PQC_ALGORITHMS=kyber1024,kyber768,dilithium5,dilithium3
AUTH_METHODS=pki,psk,hybrid
TZ=America/New_York

# Demo Credentials (CHANGE FOR PRODUCTION!)
CLUSTER_SECRET=cluster_secret_2025_demo
DB_PASSWORD=secure_db_password_2025_demo
WEB_SECRET_KEY=web_secret_2025_demo
GRAFANA_PASSWORD=admin
GRAFANA_USER=admin

# Demo User Credentials
DEMO_PSK_1=pqc-demo-key-2025-secure
DEMO_PSK_2=user1-pqc-key-2025
DEMO_PSK_3=user2-pqc-key-2025
ADMIN_PSK=admin-pqc-key-2025-ultra-secure

# Port Configuration (adjust if ports are in use)
HUB_PORT_IKE=500
HUB_PORT_NAT_T=4500
HUB_PORT_API=8443
WEB_PORT=8080
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090

# Demo Mode Settings
DEMO_MODE=true
DEMO_USERS=alice,bob,charlie
DEMO_CONNECTIONS=5
DEMO_DATA_SIMULATION=true

# Certificate Configuration
CA_EXPIRY_DAYS=3650
CERT_EXPIRY_DAYS=365
AUTO_CERT_GENERATION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
ENABLE_DEBUG_LOGS=false

# Performance Tuning
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=300
KEEPALIVE_INTERVAL=60

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=30
ALERT_THRESHOLDS_CPU=80
ALERT_THRESHOLDS_MEMORY=85
ALERT_THRESHOLDS_DISK=90

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# High Availability (set ENABLE_HA=true to use)
HUB_SECONDARY_IP=192.168.0.104
HUB_SECONDARY_PORT_IKE=501
HUB_SECONDARY_PORT_NAT_T=4501
HUB_SECONDARY_PORT_API=8444

# Load Balancer (requires HA mode)
LB_PORT_IKE=500
LB_PORT_NAT_T=4500
LB_PORT_HTTP=80
LB_PORT_HTTPS=443
LB_PORT_STATS=8080

# Development/Testing
DEBUG=false
DEVELOPMENT_MODE=false
TESTING_MODE=false
MOCK_DATA=false

# Container Configuration
RESTART_POLICY=unless-stopped
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Network Security
FIREWALL_ENABLED=true
INTRUSION_DETECTION=false
FAIL2BAN_ENABLED=false

# Compliance
AUDIT_LOGGING=true
COMPLIANCE_MODE=demo
FIPS_MODE=false

# Integration
LDAP_ENABLED=false
RADIUS_ENABLED=false
WEBHOOK_NOTIFICATIONS=false
EMAIL_NOTIFICATIONS=false

# Cloud Integration
CLOUD_PROVIDER=none
S3_BACKUP=false
CLOUDWATCH_LOGS=false

# Advanced Features
QUANTUM_SAFE_MODE=true
HYBRID_CLASSICAL_PQC=true
CERTIFICATE_TRANSPARENCY=false
QUANTUM_KEY_DISTRIBUTION=false

# Demo Simulation
SIMULATE_TRAFFIC=true
SIMULATE_CONNECTIONS=true
SIMULATE_ALERTS=false
DEMO_TOUR=true

# Notes:
# - For production, change all default passwords and secrets
# - Ensure HUB_IP matches your actual server IP address
# - Adjust ports if there are conflicts on your system
# - Enable HA only if you have multiple servers
# - Set appropriate time zone for your location
# - Review security settings before production deployment
